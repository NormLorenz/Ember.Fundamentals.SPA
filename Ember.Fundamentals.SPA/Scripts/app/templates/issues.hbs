    <h4>ISSUES</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Avatar</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            {{#each item in model}}
            <tr>
                <td><img {{bind-attr src=item.user.avatar_url}} style="width:100px" /></td>
                <td>
                    {{item.title}}
                    <hr />
                    <p class="text-muted">{{fromDate item.created_at}}</p>
                </td>
            </tr>
            {{else}}
            <tr>
                <td>
                    <p class="text-muted">No Issues</p>
                </td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
    </table>